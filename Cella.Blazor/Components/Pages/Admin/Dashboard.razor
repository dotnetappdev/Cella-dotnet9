@page "/admin/dashboard"
@layout AdminLayout

<h3 class="mb-4">Admin Dashboard</h3>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card h-100 text-center admin-dashboard-card" @onclick="() => NavigateTo("/admin/stock-list")" style="cursor:pointer;">
            <div class="card-body">
                <span class="bi bi-box-seam display-4 mb-2"></span>
                <h5 class="card-title mt-2">Stock List</h5>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center admin-dashboard-card" @onclick="() => NavigateTo("/admin/stock-check")" style="cursor:pointer;">
            <div class="card-body">
                <span class="bi bi-search display-4 mb-2"></span>
                <h5 class="card-title mt-2">Stock Check</h5>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center admin-dashboard-card" @onclick="() => NavigateTo("/admin/salesorders")" style="cursor:pointer;">
            <div class="card-body">
                <span class="bi bi-receipt display-4 mb-2"></span>
                <h5 class="card-title mt-2">Sales Orders</h5>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center admin-dashboard-card" @onclick="() => NavigateTo("/admin/drivers")" style="cursor:pointer;">
            <div class="card-body">
                <span class="bi bi-truck display-4 mb-2"></span>
                <h5 class="card-title mt-2">Drivers</h5>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center admin-dashboard-card" @onclick="() => NavigateTo("/admin/routes")" style="cursor:pointer;">
            <div class="card-body">
                <span class="bi bi-geo-alt display-4 mb-2"></span>
                <h5 class="card-title mt-2">Routes</h5>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center admin-dashboard-card" @onclick="() => NavigateTo("/admin/weighbridge")" style="cursor:pointer;">
            <div class="card-body">
                <span class="bi bi-truck-flatbed display-4 mb-2"></span>
                <h5 class="card-title mt-2">Weigh Bridge</h5>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center admin-dashboard-card" @onclick="() => NavigateTo("/admin/billofmaterials")" style="cursor:pointer;">
            <div class="card-body">
                <span class="bi bi-list-check display-4 mb-2"></span>
                <h5 class="card-title mt-2">Bill of Materials</h5>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] NavigationManager Navigation { get; set; }
    void NavigateTo(string url) => Navigation.NavigateTo(url);
}

<style>
.admin-dashboard-card {
    transition: box-shadow 0.2s;
}
.admin-dashboard-card:hover {
    box-shadow: 0 0 0.5rem #007bff;
    background: #f8f9fa;
}
</style>
