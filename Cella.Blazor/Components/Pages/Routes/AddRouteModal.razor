@using Microsoft.AspNetCore.Components.Forms
@using Cella.Models
@inject HttpClient Http

@if (IsOpen)
{
    <div class="modal show d-block" tabindex="-1" style="background:rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Route</h5>
                    <button type="button" class="btn-close" @onclick="Close" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="route" OnValidSubmit="CreateRouteAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="mb-3">
                            <label class="form-label">From (Warehouse Id)</label>
                            <InputNumber class="form-control" @bind-Value="route.FromCella" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Destination Address Id</label>
                            <InputNumber class="form-control" @bind-Value="route.DesintationAddress" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Number of Stops</label>
                            <InputNumber class="form-control" @bind-Value="route.NumberOFStops" />
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary" type="submit">Create</button>
                            <button class="btn btn-secondary" type="button" @onclick="Close">Cancel</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback OnRouteAdded { get; set; }
    private DriverRoutes route = new DriverRoutes();
    private bool IsOpen { get; set; }
    public void Open()
    {
        route = new DriverRoutes();
        IsOpen = true;
        StateHasChanged();
    }
    private void Close()
    {
        IsOpen = false;
        StateHasChanged();
    }
    private async Task CreateRouteAsync()
    {
        var response = await Http.PostAsJsonAsync("api/routes", route);
        if (response.IsSuccessStatusCode)
        {
            IsOpen = false;
            if (OnRouteAdded.HasDelegate)
                await OnRouteAdded.InvokeAsync();
        }
    }
}
