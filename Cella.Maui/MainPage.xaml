<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cella.Maui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Entry x:Name="txtUserName" TextColor="White" PlaceholderColor="White" Placeholder="Enter Username"></Entry>
            <Entry x:Name="txtPassword" TextColor="White" PlaceholderColor="White" Placeholder="Enter Password"></Entry>
            <Button
                x:Name="btnLogin"
                Text="Login" 
                SemanticProperties.Hint="Logs the person in"
                Clicked="OnLogin"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
